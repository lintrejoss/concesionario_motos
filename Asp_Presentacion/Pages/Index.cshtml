@page
@model asp_presentacion.Pages.IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<h2>Lista de Cargos</h2>

@if (Model.Cargos == null || Model.Cargos.Count == 0)
{
    <p>No hay cargos para mostrar.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id Cargo</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cargo in Model.Cargos)
            {
                <tr>
                    <td>@cargo.IdCargo</td>
                    <td>@cargo.Nombre</td>
                </tr>
            }
        </tbody>
    </table>
}