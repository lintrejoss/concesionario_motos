@page
@model asp_presentacion.Pages.Ventanas.ClientesModel
@{
    ViewData["Titulo"] = "Gestión de Clientes";
}
<center>
    <div>
        <form method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div align="left">
                <h3>Clientes</h3>
            </div>
            <div align="left" class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != Dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != Dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == Dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == Dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion == Dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <input asp-for="Actual.IdCliente" type="hidden" />
                <div class="containers_vn panel panel-default">
                    <h3>Editar Cliente</h3>
                    <div class="form-group">
                        <label asp-for="Actual.Nombre" class="control-label">Nombre</label>
                        <input asp-for="Actual.Nombre" class="cts_forms form-control" />
                        <label asp-for="Actual.Documento" class="control-label">Documento</label>
                        <input asp-for="Actual.Documento" class="cts_forms form-control" />
                        <label asp-for="Actual.Telefono" class="control-label">Teléfono</label>
                        <input asp-for="Actual.Telefono" class="cts_forms form-control" />
                        <label asp-for="Actual.Email" class="control-label">Email</label>
                        <input asp-for="Actual.Email" class="cts_forms form-control" />
                        <label asp-for="Actual.Direccion" class="control-label">Dirección</label>
                        <input asp-for="Actual.Direccion" class="cts_forms form-control" />
                    </div>
                </div>
            }

            @if (Model.Accion == Dominio.Nucleo.Enumerables.Ventanas.Borrar && Model.Actual != null)
            {
                <div class="popup">
                    <div class="pp_del_inner">
                        <div style="width:95%">
                            <h2>Mensaje</h2>
                            <h4>¿Desea borrar este cliente?</h4>
                            <h6>@Model.Actual.Nombre</h6>
                            <br />
                            <input asp-for="Actual.IdCliente" type="hidden" />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == Dominio.Nucleo.Enumerables.Ventanas.Listas || Model.Accion == Dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flTipo"
                       class="cts_forms form-control"
                       asp-for="Filtro.Nombre"
                       placeholder="Buscar por nombre" />
                <br />
                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Documento</th>
                                <th>Teléfono</th>
                                <th>Email</th>
                                <th>Dirección</th>
                                <th class="cl_actions">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cliente in Model.Lista ?? Enumerable.Empty<Dominio.Entidades.Clientes>())
                            {
                                <tr>
                                    <td>@cliente.Nombre</td>
                                    <td>@cliente.Documento</td>
                                    <td>@cliente.Telefono</td>
                                    <td>@cliente.Email</td>
                                    <td>@cliente.Direccion</td>
                                    <td>
                                        <form method="post" style="display:inline">
                                            <input type="hidden" name="data" value="@cliente.IdCliente" />
                                            <button type="submit"
                                                    asp-page-handler="BtModificar"
                                                    class="btn btn-secondary">Modificar</button>
                                        </form>
                                        <form method="post" style="display:inline">
                                            <input type="hidden" name="data" value="@cliente.IdCliente" />
                                            <button type="submit"
                                                    asp-page-handler="BtBorrarVal"
                                                    class="btn btn-secondary">Borrar</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
            }
        </form>
    </div>
</center>
