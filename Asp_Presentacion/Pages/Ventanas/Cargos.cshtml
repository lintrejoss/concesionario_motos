@page
@model asp_presentacion.Pages.Ventanas.CargosModel
@{
    ViewData["Titulo"] = "Gestión de Cargos";
}

<div>
    <form method="post">
        <div align="left"><h3>Cargos</h3></div>
        <div align="left" class="bt_panel_buttons">
            <input type="submit" value="Refrescar" asp-page-handler="BtRefrescar" class="btn btn-secondary" disabled="@(Model.Accion != asp_presentacion.Pages.Ventanas.CargosModel.EstadoVentana.Listas)" />
            <input type="submit" value="Nuevo" asp-page-handler="BtNuevo" class="btn btn-secondary" disabled="@(Model.Accion != asp_presentacion.Pages.Ventanas.CargosModel.EstadoVentana.Listas)" />
            <input type="submit" value="Guardar" asp-page-handler="BtGuardar" class="btn btn-secondary" disabled="@(Model.Accion == asp_presentacion.Pages.Ventanas.CargosModel.EstadoVentana.Listas)" />
            <input type="submit" value="Cancelar" asp-page-handler="BtCancelar" class="btn btn-secondary" disabled="@(Model.Accion == asp_presentacion.Pages.Ventanas.CargosModel.EstadoVentana.Listas)" />
        </div>

        @if (Model.Accion == asp_presentacion.Pages.Ventanas.CargosModel.EstadoVentana.Editar)
        {
            <div class="panel panel-default" style="margin:12px 0;">
                <h4>Nuevo Cargo</h4>
                <input asp-for="NombreNuevo" class="form-control" placeholder="Nombre de cargo" />
            </div>
        }

        <div class="panel panel-default" style="margin:16px 0;">
            <table class="tb_data table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cargo in Model.Lista ?? new List<Dominio.Entidades.Cargos>())
                    {
                        <tr>
                            <td>@cargo.IdCargo</td>
                            <td>@cargo.Nombre</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>

